<Window x:Class="SLICE_System.Views.Dialogs.DispatchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dispatch Stock" Height="450" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="White" AllowsTransparency="True" BorderBrush="#E67E22" BorderThickness="1">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Dispatch Stock" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="txtItemName" Text="Sending: Multiple Items" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,10" TextTrimming="CharacterEllipsis"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="DESTINATION BRANCH" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbBranches" Height="40" Padding="10,8" Background="#F9F9F9" BorderBrush="#EEE"/>
            </StackPanel>

            <DataGrid x:Name="dgItems" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                      GridLinesVisibility="Horizontal" Background="White" BorderBrush="#EEE" BorderThickness="1"
                      HeadersVisibility="Column" RowHeight="40">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F9F9F9"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="#7F8C8D"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EEE"/>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ITEM" Binding="{Binding ItemName}" Width="*" IsReadOnly="True" Foreground="#2C3E50" FontWeight="SemiBold"/>

                    <DataGridTextColumn Header="UNIT" Binding="{Binding Unit}" Width="60" IsReadOnly="True" Foreground="#95A5A6"/>

                    <DataGridTemplateColumn Header="QTY" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="5" FontWeight="Bold" Foreground="#E67E22" 
                                         BorderThickness="1" BorderBrush="#EEE" Background="#FAFAFA"
                                         HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Background="Transparent" BorderThickness="0" Foreground="#95A5A6" Cursor="Hand" FontWeight="SemiBold"/>
            <Button Content="DISPATCH" Click="Dispatch_Click" Width="120" Height="40" Background="#E67E22" Foreground="White" FontWeight="Bold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>