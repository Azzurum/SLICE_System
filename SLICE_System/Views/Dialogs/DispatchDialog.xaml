<Window x:Class="SLICE_System.Views.Dialogs.DispatchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dispatch Stock" Height="320" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="White" AllowsTransparency="True" BorderBrush="#E67E22" BorderThickness="1">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Dispatch Stock" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
            <TextBlock x:Name="txtItemName" Text="Sending: Item Name" FontSize="14" Foreground="#7F8C8D" Margin="0,5,0,20" TextTrimming="CharacterEllipsis"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="SELECT BRANCH" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbBranches" Height="45" Padding="10,12" Margin="0,0,0,15" Background="#F9F9F9" BorderBrush="#EEE"/>

            <TextBlock Text="QUANTITY TO SEND" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
            <TextBox x:Name="txtQty" Height="45" VerticalContentAlignment="Center" Padding="10,0" Background="#F9F9F9" BorderBrush="#EEE" FontSize="14" FontWeight="SemiBold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Background="Transparent" BorderThickness="0" Foreground="#95A5A6" Cursor="Hand" FontWeight="SemiBold"/>
            <Button Content="DISPATCH" Click="Dispatch_Click" Width="120" Height="40" Background="#E67E22" Foreground="White" FontWeight="Bold" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>