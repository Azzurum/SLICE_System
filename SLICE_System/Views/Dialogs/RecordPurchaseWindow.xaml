<Window x:Class="SLICE_System.Views.Dialogs.RecordPurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Record Stock Purchase" Height="700" Width="900"
        WindowStartupLocation="CenterScreen" Background="#F4F6F7" WindowStyle="ToolWindow" FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="SoftButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0F8FF"/>
            <Setter Property="Foreground" Value="#2980B9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#E1F0FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="New Procurement" FontSize="28" FontWeight="Black" Foreground="#2C3E50"/>
                <TextBlock Text="Record purchased stock and log the expense." FontSize="14" Foreground="#7F8C8D" Margin="0,2,0,0"/>
            </StackPanel>

            <Border Grid.Column="1" Background="#E8F8F5" BorderBrush="#1ABC9C" BorderThickness="1" CornerRadius="8" Padding="15,8" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Building" Height="14" Foreground="#16A085" Margin="0,0,8,0"/>
                    <TextBlock Text="DESTINATION: HEAD OFFICE" Foreground="#16A085" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1" Background="White" CornerRadius="16" Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="#BDC3C7" ShadowDepth="4" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="SUPPLIER / VENDOR NAME" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,6"/>
                        <Border Background="#F8F9F9" BorderBrush="#EAECEE" BorderThickness="1" CornerRadius="8" Height="42">
                            <TextBox Text="{Binding SupplierName}" Background="Transparent" BorderThickness="0" 
                                     VerticalContentAlignment="Center" Padding="15,0" FontSize="15" FontWeight="SemiBold" Foreground="#2C3E50"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="INVOICE DATE" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,6"/>
                        <DatePicker SelectedDate="{Binding PurchaseDate}" Height="42" FontSize="14" BorderThickness="1" BorderBrush="#EAECEE" Background="#F8F9F9"/>
                    </StackPanel>
                </Grid>

                <Rectangle Grid.Row="1" Height="1" Fill="#EEEEEE" Margin="0,0,0,15"/>

                <DataGrid Grid.Row="2" ItemsSource="{Binding CartItems}" AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="Transparent" BorderThickness="0" RowHeight="50"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column" AlternatingRowBackground="#FAFCFC">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#95A5A6"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Padding" Value="10,0,10,10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#EAECEE"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="RAW INGREDIENT" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9F9" CornerRadius="6" BorderBrush="#EAECEE" BorderThickness="1" Height="36">
                                        <ComboBox ItemsSource="{Binding DataContext.AllIngredients, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedValue="{Binding ItemID, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectedValuePath="ItemID" DisplayMemberPath="ItemName"
                                                  BorderThickness="0" Background="Transparent" FontWeight="Bold" FontSize="14" Foreground="#2C3E50" Padding="10,0"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="QTY" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9F9" CornerRadius="6" BorderBrush="#EAECEE" BorderThickness="1" Height="36">
                                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="Transparent" BorderThickness="0" TextAlignment="Center" 
                                                 VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="UNIT COST (₱)" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9F9" CornerRadius="6" BorderBrush="#EAECEE" BorderThickness="1" Height="36">
                                        <TextBox Text="{Binding UnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                                 Background="Transparent" BorderThickness="0" TextAlignment="Right" Padding="0,0,10,0" 
                                                 VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14" Foreground="#E67E22"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="SUBTOTAL" Binding="{Binding Subtotal, StringFormat=N2, Mode=OneWay}" Width="120" IsReadOnly="True" FontWeight="Black" Foreground="#27AE60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,0,10,0"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.RemoveRowCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                            CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Remove Item"
                                            Width="30" Height="30">
                                        <fa:ImageAwesome Icon="Trash" Height="14" Foreground="#E74C3C"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="3" Command="{Binding AddRowCommand}" Height="40" Margin="0,15,0,0" Style="{StaticResource SoftButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="PlusCircle" Height="14" Foreground="#2980B9" Margin="0,0,8,0"/>
                        <TextBlock Text="ADD ANOTHER ITEM" Foreground="#2980B9" FontWeight="Bold" FontSize="12"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="CANCEL" IsCancel="True" Background="Transparent" Foreground="#95A5A6" 
                    FontWeight="Bold" BorderThickness="0" Cursor="Hand" FontSize="13" Width="100"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <StackPanel Margin="0,0,30,0" VerticalAlignment="Center">
                    <TextBlock Text="GRAND TOTAL" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" HorizontalAlignment="Right" Margin="0,0,0,2"/>
                    <TextBlock Text="{Binding GrandTotal, StringFormat=₱ {0:N2}}" FontSize="30" FontWeight="Black" Foreground="#E67E22" HorizontalAlignment="Right" Margin="0,-5,0,0"/>
                </StackPanel>

                <Button Command="{Binding SaveCommand}" Background="#27AE60" Foreground="White" FontWeight="Bold" FontSize="14" Width="220" Height="50" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Check" Height="14" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="CONFIRM PURCHASE"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>