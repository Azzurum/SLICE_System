<UserControl x:Class="SLICE_System.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Background="#FDFBF7" FontFamily="Segoe UI">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BrandGreen" Color="#27AE60"/>
        <SolidColorBrush x:Key="BrandYellow" Color="#F39C12"/>
        <SolidColorBrush x:Key="BrandRed" Color="#C0392B"/>
        <SolidColorBrush x:Key="BrandBlue" Color="#2980B9"/>
        <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLight" Color="#95A5A6"/>

        <Geometry x:Key="Vec_Money">M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12.89,11.1C12.14,10.85 11.66,10.65 11.66,10.27C11.66,9.94 11.96,9.7 12.43,9.7C12.96,9.7 13.23,10.03 13.26,10.46H14.9C14.82,9.37 14.07,8.65 13,8.46V7H11.5V8.48C10.5,8.68 9.71,9.33 9.71,10.3C9.71,11.53 10.74,12.16 11.83,12.5C12.71,12.79 13.04,13.06 13.04,13.5C13.04,13.89 12.67,14.2 12.17,14.2C11.45,14.2 11.1,13.73 11.05,13.19H9.41C9.5,14.63 10.5,15.35 11.5,15.53V17H13V15.53C14.06,15.33 14.9,14.62 14.9,13.5C14.9,12.06 13.71,11.38 12.89,11.1Z</Geometry>
        <Geometry x:Key="Vec_Alert">M1,21H23L12,2L1,21M13,18H11V16H13V18M13,14H11V10H13V14Z</Geometry>
        <Geometry x:Key="Vec_Truck">M18,18.5A1.5,1.5 0 0,0 16.5,17A1.5,1.5 0 0,0 15,18.5A1.5,1.5 0 0,0 16.5,20A1.5,1.5 0 0,0 18,18.5M6,18.5A1.5,1.5 0 0,0 4.5,17A1.5,1.5 0 0,0 3,18.5A1.5,1.5 0 0,0 4.5,20A1.5,1.5 0 0,0 6,18.5M20,8L23,11V17H21A3,3 0 0,1 18,20A3,3 0 0,1 15,17H9A3,3 0 0,1 6,20A3,3 0 0,1 3,17H1V6C1,4.89 1.89,4 3,4H17V8H20M17,17V15H15V17H17Z</Geometry>
        <Geometry x:Key="Vec_Refresh">M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z</Geometry>
        <Geometry x:Key="Vec_Trophy">M18 2C17.1 2 16 3 16 4H8C8 3 6.9 2 6 2H2V11C2 12 3 13 4 13.9V22H20V13.9C21 13 22 12 22 11V2H18M4 11V4H6V11H4M20 11H18V4H20V11M12 20.3C10.7 19.3 9.6 18.1 8.8 16.7C8.3 15.8 8 14.9 8 14H16C16 14.9 15.7 15.8 15.2 16.7C14.4 18.1 13.3 19.3 12 20.3Z</Geometry>
        <Geometry x:Key="Vec_Target">M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z</Geometry>
        <Geometry x:Key="Vec_Filter">M10,18H14V16H10V18M3,6V8H21V6H3M6,13H18V11H6V13Z</Geometry>

        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,20,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Color="#BDC3C7" ShadowDepth="5" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="KpiCard" TargetType="Border" BasedOn="{StaticResource DashboardCard}">
            <Setter Property="Height" Value="140"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,10,0">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="450"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Grid.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="TransRow1" Storyboard.TargetProperty="Y" From="-50" To="0" Duration="0:0:0.6">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="Row1" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6"/>

                            <DoubleAnimation Storyboard.TargetName="TransRow2" Storyboard.TargetProperty="Y" From="50" To="0" BeginTime="0:0:0.2" Duration="0:0:0.6">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="Row2" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.2" Duration="0:0:0.6"/>

                            <DoubleAnimation Storyboard.TargetName="TransRow3" Storyboard.TargetProperty="Y" From="50" To="0" BeginTime="0:0:0.4" Duration="0:0:0.6">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="Row3" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0.4" Duration="0:0:0.6"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>

            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Command Center" FontSize="28" FontWeight="Black" Foreground="{StaticResource TextDark}"/>
                    <TextBlock Text="Enterprise overview and real-time alerts." FontSize="14" Foreground="{StaticResource TextLight}"/>
                </StackPanel>

                <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="15,8" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Color="#BDC3C7" ShadowDepth="2" Opacity="0.1"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0,0,15,0" VerticalAlignment="Center">
                            <TextBlock Text="BRANCH" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextLight}"/>
                            <ComboBox x:Name="cmbBranches" Width="140" BorderThickness="0" Background="Transparent" 
                                      FontWeight="SemiBold" Foreground="{StaticResource TextDark}" 
                                      DisplayMemberPath="BranchName" SelectedValuePath="BranchID"
                                      SelectionChanged="cmbBranches_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,15,0" VerticalAlignment="Center">
                            <TextBlock Text="PERIOD" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextLight}"/>
                            <ComboBox x:Name="cmbDateRange" Width="120" BorderThickness="0" Background="Transparent" 
                                      FontWeight="SemiBold" Foreground="{StaticResource TextDark}"
                                      SelectionChanged="cmbDateRange_SelectionChanged">
                                <ComboBoxItem Content="Today" IsSelected="True"/>
                                <ComboBoxItem Content="Yesterday"/>
                                <ComboBoxItem Content="Last 7 Days"/>
                                <ComboBoxItem Content="Last 30 Days"/>
                                <ComboBoxItem Content="Custom Range"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel x:Name="pnlCustomDate" Orientation="Horizontal" Visibility="Collapsed" VerticalAlignment="Center" Margin="0,0,15,0">
                            <DatePicker x:Name="dpStart" Width="100" Margin="0,0,5,0" BorderThickness="0"/>
                            <TextBlock Text="-" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{StaticResource TextLight}"/>
                            <DatePicker x:Name="dpEnd" Width="100" BorderThickness="0"/>
                        </StackPanel>

                        <Button Click="Refresh_Click" Background="{StaticResource BrandGreen}" Width="35" Height="35" BorderThickness="0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                            <Path Data="{StaticResource Vec_Filter}" Fill="White" Height="14" Width="14" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="Row1" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="TransRow1"/>
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource KpiCard}" Background="{StaticResource BrandGreen}">
                    <Grid>
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,400,140" RadiusX="16" RadiusY="16"/>
                        </Grid.Clip>
                        <Path Data="{StaticResource Vec_Money}" Fill="White" Opacity="0.2" Height="80" Width="80" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-15,-15"/>
                        <StackPanel Margin="25" VerticalAlignment="Center">
                            <TextBlock Text="REVENUE" Foreground="White" Opacity="0.8" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="txtRevenue" Text="₱0.00" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock x:Name="txtTxCount" Text="0 Transactions" Foreground="White" Opacity="0.6" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border x:Name="AlertCard" Grid.Column="1" Style="{StaticResource KpiCard}" Background="{StaticResource BrandRed}">
                    <Border.Effect>
                        <DropShadowEffect x:Name="AlertShadow" BlurRadius="15" Color="#C0392B" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,400,140" RadiusX="16" RadiusY="16"/>
                        </Grid.Clip>
                        <Path Data="{StaticResource Vec_Alert}" Fill="White" Opacity="0.2" Height="80" Width="80" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-15,-15"/>
                        <StackPanel Margin="25" VerticalAlignment="Center">
                            <TextBlock Text="CRITICAL ALERTS" Foreground="White" Opacity="0.8" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="txtAlerts" Text="0" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Items require attention" Foreground="White" Opacity="0.6" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource KpiCard}" Background="{StaticResource BrandYellow}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,400,140" RadiusX="16" RadiusY="16"/>
                        </Grid.Clip>
                        <Path Data="{StaticResource Vec_Truck}" Fill="White" Opacity="0.2" Height="80" Width="80" Stretch="Uniform" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-15,-15"/>
                        <StackPanel Margin="25" VerticalAlignment="Center">
                            <TextBlock Text="LOGISTICS" Foreground="White" Opacity="0.8" FontSize="11" FontWeight="Bold"/>
                            <TextBlock x:Name="txtShipments" Text="0" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,5,0,0"/>
                            <TextBlock Text="Active shipments" Foreground="White" Opacity="0.6" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="Row2" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="TransRow2"/>
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Performance Overview" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock x:Name="txtChartSub" Text="Revenue by Branch" FontSize="12" Foreground="{StaticResource TextLight}"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" Series="{Binding BranchSeries}" LegendLocation="None" Margin="0,15,0,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis LabelFormatter="{Binding CurrencyFormatter}" Foreground="{StaticResource TextLight}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Labels="{Binding BranchLabels}" Foreground="{StaticResource TextDark}" FontWeight="SemiBold">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator Step="1" StrokeThickness="0"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="160"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource DashboardCard}" Background="{StaticResource BrandBlue}" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <lvc:Gauge Grid.Column="0" Uses360Mode="True" From="0" To="{Binding DailySalesTarget}" Value="{Binding CurrentSales}" HighFontSize="20" Foreground="White" InnerRadius="0" GaugeBackground="#40FFFFFF" Margin="5"/>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock Text="TARGET" Foreground="White" Opacity="0.7" FontSize="10" FontWeight="Bold"/>
                                <TextBlock Text="{Binding DailySalesTarget, StringFormat='{}{0:N0}'}" Foreground="White" FontSize="18" FontWeight="Bold"/>
                                <Separator Background="White" Opacity="0.3" Margin="0,5"/>
                                <TextBlock Text="ACTUAL" Foreground="White" Opacity="0.7" FontSize="10" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SalesProgress, StringFormat='{}{0:P0}'}" Foreground="#2ECC71" FontSize="22" FontWeight="Black"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Style="{StaticResource DashboardCard}" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel>
                                <TextBlock Text="Best Sellers" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                                <TextBlock Text="By volume" FontSize="12" Foreground="{StaticResource TextLight}"/>
                            </StackPanel>
                            <lvc:PieChart Grid.Row="1" Series="{Binding ProductSeries}" LegendLocation="Bottom" InnerRadius="50" Margin="0,5,0,0" Hoverable="True">
                                <lvc:PieChart.ChartLegend>
                                    <lvc:DefaultLegend BulletSize="10" Foreground="{StaticResource TextDark}"/>
                                </lvc:PieChart.ChartLegend>
                            </lvc:PieChart>
                            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30">
                                <Path Data="{StaticResource Vec_Trophy}" Fill="#F1C40F" Height="18" Width="18" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="TOP 5" FontWeight="Bold" Foreground="{StaticResource TextLight}" HorizontalAlignment="Center" FontSize="10"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <Grid x:Name="Row3" Grid.Row="3" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TranslateTransform x:Name="TransRow3"/>
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="300"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Inventory Health" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                            <TextBlock Text="Stock levels by branch" FontSize="12" Foreground="{StaticResource TextLight}"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" Series="{Binding InventorySeries}" LegendLocation="Right" Margin="0,15,0,0">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Labels="{Binding InventoryLabels}" Foreground="{StaticResource TextLight}">
                                    <lvc:Axis.Separator>
                                        <lvc:Separator StrokeThickness="0"/>
                                    </lvc:Axis.Separator>
                                </lvc:Axis>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis Title="Items" Foreground="{StaticResource TextLight}"/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource DashboardCard}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <TextBlock Text="Urgent Actions" FontSize="16" FontWeight="Bold" Foreground="{StaticResource BrandRed}"/>
                            <TextBlock Text="Low stock items" FontSize="12" Foreground="{StaticResource TextLight}"/>
                        </StackPanel>
                        <DataGrid x:Name="dgAlerts" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                                  GridLinesVisibility="Horizontal" HeadersVisibility="Column" Background="White" BorderThickness="0" 
                                  RowHeight="40" Margin="0,15,0,0" VerticalScrollBarVisibility="Auto" MaxHeight="250">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Padding" Value="5,0,0,10"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#EEE"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Branch" Binding="{Binding BranchName}" Width="*" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                                <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTemplateColumn Header="Status" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="#FDEDEC" CornerRadius="4" Padding="8,4" HorizontalAlignment="Center">
                                                <TextBlock Text="LOW" Foreground="{Binding StatusColor}" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="4" Style="{StaticResource DashboardCard}" Margin="0,0,0,30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Live Transaction Feed" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                        <TextBlock x:Name="txtActivitySub" Text="Recent sales" FontSize="12" Foreground="{StaticResource TextLight}"/>
                    </StackPanel>
                    <DataGrid x:Name="dgActivity" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                              GridLinesVisibility="Horizontal" HeadersVisibility="Column" Background="White" BorderThickness="0" 
                              RowHeight="45" VerticalScrollBarVisibility="Disabled">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#EEE"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Padding" Value="10,0"/>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding TimeAgo}" Width="100" Foreground="{StaticResource TextLight}"/>
                            <DataGridTextColumn Header="Branch" Binding="{Binding BranchName}" Width="150" FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding QuantitySold}" Width="60"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat=₱{0:N2}}" Width="100" FontWeight="Bold" Foreground="{StaticResource BrandGreen}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>