<UserControl x:Class="SLICE_System.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:views="clr-namespace:SLICE_System.Views"
             xmlns:vm="clr-namespace:SLICE_System.ViewModels"
             Background="#FDFBF7" FontFamily="Segoe UI">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <SolidColorBrush x:Key="BrandOrange" Color="#E67E22"/>
        <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLight" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BtnGray" Color="#ECF0F1"/>

        <Style TargetType="ListBoxItem" x:Key="CategoryChipStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bdr" Background="White" CornerRadius="20" Margin="0,0,10,0" Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#BDC3C7" BlurRadius="5" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter Margin="20,10" TextElement.FontWeight="Bold" TextElement.Foreground="#7F8C8D"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{StaticResource BrandOrange}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="bdr" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#E67E22" BlurRadius="8" Opacity="0.4" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#FFF3E0"/>
                                <Setter Property="Foreground" Value="{StaticResource BrandOrange}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="bdr" Property="Background" Value="{StaticResource BrandOrange}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="MenuCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Width" Value="190"/>
            <Setter Property="Height" Value="210"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <Border.Effect>
                                <DropShadowEffect Color="#BDC3C7" BlurRadius="15" Opacity="0.2" ShadowDepth="4"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Ellipse Width="90" Height="90" Fill="#FFF3E0"/>
                                    <fa:ImageAwesome Icon="Cutlery" Foreground="{StaticResource BrandOrange}" Height="40"/>
                                </Grid>
                                <StackPanel Grid.Row="1" Margin="15,0,15,20">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="15" 
                                               TextWrapping="Wrap" TextAlignment="Center" Foreground="{StaticResource TextDark}" 
                                               Height="40" VerticalAlignment="Top"/>
                                    <Border Background="{StaticResource BrandOrange}" CornerRadius="8" HorizontalAlignment="Center" Padding="15,5" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding FormattedPrice}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#E67E22" BlurRadius="20" Opacity="0.4" ShadowDepth="5"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bdr" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="QtyBtnStyle">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#D0D3D4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#95A5A6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="14" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{StaticResource BrandOrange}"/>
                                <Setter TargetName="bdr" Property="Background" Value="#FFF3E0"/>
                                <Setter Property="Foreground" Value="{StaticResource BrandOrange}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="{StaticResource BrandOrange}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="CheckoutBtnStyle">
            <Setter Property="Background" Value="{StaticResource BrandOrange}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" CornerRadius="12" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect Color="#E67E22" BlurRadius="10" Opacity="0.4" ShadowDepth="3"/>
                            </Border.Effect>
                            <Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <fa:ImageAwesome Icon="Fire" Foreground="#FFEB3B" Height="20" Margin="0,0,10,0"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#D35400"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bdr" Property="Background" Value="#BDC3C7"/>
                                <Setter TargetName="bdr" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Counter" FontSize="32" FontWeight="Black" Foreground="{StaticResource TextDark}"/>
                <TextBlock Text="Select items to add to the order." FontSize="16" Foreground="{StaticResource TextLight}"/>
            </StackPanel>

            <ListBox Grid.Row="1" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" 
                     Background="Transparent" BorderThickness="0" Margin="0,0,0,20"
                     ItemContainerStyle="{StaticResource CategoryChipStyle}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MenuCardStyle}"
                                    Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Grid.Column="1" Background="White" BorderBrush="#EEE" BorderThickness="1,0,0,0">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,10,0,20">
                    <TextBlock Text="Current Order" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextDark}"/>
                    <TextBlock Text="{Binding CurrentDate, StringFormat='{}{0:MMMM dd, yyyy}'}" FontSize="12" Foreground="{StaticResource TextLight}"/>
                    <Separator Margin="0,20,0,0" Background="#F5F5F5"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                    <ItemsControl ItemsSource="{Binding CartItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding DisplayName}" VerticalAlignment="Center" 
                                               FontWeight="SemiBold" Foreground="{StaticResource TextDark}" 
                                               TextWrapping="Wrap" Margin="0,0,10,0" FontSize="14"/>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Button Style="{StaticResource QtyBtnStyle}" 
                                                Command="{Binding DataContext.DecreaseQtyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}">
                                            <fa:ImageAwesome Icon="Minus" Height="8"/>
                                        </Button>

                                        <TextBlock Text="{Binding Qty}" Width="30" TextAlignment="Center" VerticalAlignment="Center" 
                                                   FontWeight="Bold" FontSize="15" Foreground="{StaticResource TextDark}"/>

                                        <Button Style="{StaticResource QtyBtnStyle}" 
                                                Command="{Binding DataContext.IncreaseQtyCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}">
                                            <fa:ImageAwesome Icon="Plus" Height="8"/>
                                        </Button>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding TotalPrice, StringFormat='{}{0:N0}'}" 
                                               VerticalAlignment="Center" HorizontalAlignment="Right" 
                                               FontWeight="Bold" Foreground="{StaticResource TextDark}" FontSize="14"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Row="2">
                    <Grid Margin="0,0,0,25">
                        <TextBlock Text="Total Due" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextLight}" VerticalAlignment="Bottom"/>
                        <TextBlock Text="{Binding GrandTotal, StringFormat='₱{0:N2}'}" FontSize="32" FontWeight="Black" Foreground="{StaticResource TextDark}" HorizontalAlignment="Right"/>
                    </Grid>

                    <Button Style="{StaticResource CheckoutBtnStyle}" 
                            Content="PLACE ORDER" 
                            Command="{Binding CheckoutCommand}" 
                            Height="60"/>

                    <Button Command="{Binding ClearCartCommand}" Margin="0,15,0,0"
                            Background="Transparent" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Trash" Foreground="#E74C3C" Height="12" Margin="0,0,8,0"/>
                            <TextBlock Text="Clear Order" Foreground="#E74C3C" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid x:Name="AnimationOverlay" Visibility="{Binding IsCooking, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#D9FFFFFF"/>
            <views:CookingAnimationView/>
        </Grid>
    </Grid>
</UserControl>