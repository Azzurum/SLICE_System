<UserControl x:Class="SLICE_System.Views.WasteTrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             Background="Transparent" FontFamily="Segoe UI">

    <UserControl.Resources>
        <SolidColorBrush x:Key="FactoryDark" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SteelBlue" Color="#34495E"/>
        <SolidColorBrush x:Key="HazardYellow" Color="#F1C40F"/>
        <SolidColorBrush x:Key="AlertRed" Color="#C0392B"/>
        <SolidColorBrush x:Key="PanelGrey" Color="#ECF0F1"/>

        <Style TargetType="TextBox" x:Key="IndustrialInput">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource SteelBlue}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="bdr" CornerRadius="4" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{StaticResource HazardYellow}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="CmbToggle" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" Background="Transparent"/>
                <Path Grid.Column="1" Data="M0,0 L6,6 L12,0" Stroke="{StaticResource SteelBlue}" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </ControlTemplate>

        <Style TargetType="ComboBox" x:Key="IndustrialCombo">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="bdr" CornerRadius="4" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"/>

                            <TextBlock Text="{TemplateBinding Text}" VerticalAlignment="Center" Margin="12,0,30,0"
                                       IsHitTestVisible="False" Foreground="{StaticResource SteelBlue}" FontWeight="SemiBold"/>

                            <ToggleButton Template="{StaticResource CmbToggle}" Grid.Column="2" Focusable="false" 
                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"/>

                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Background="White" BorderThickness="2" BorderBrush="{StaticResource SteelBlue}">
                                        <ScrollViewer SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{StaticResource HazardYellow}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid ClipToBounds="True">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#2C3E50" Offset="0"/>
                <GradientStop Color="#1C2833" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Canvas>
            <Canvas.Triggers>
                <EventTrigger RoutedEvent="Canvas.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="Piston1" Storyboard.TargetProperty="(Canvas.Top)"
                                             From="-100" To="0" Duration="0:0:4" AutoReverse="True"/>
                            <DoubleAnimation Storyboard.TargetName="Piston2" Storyboard.TargetProperty="(Canvas.Top)"
                                             From="600" To="500" Duration="0:0:6" AutoReverse="True"/>
                            <DoubleAnimation Storyboard.TargetName="Piston3" Storyboard.TargetProperty="(Canvas.Top)"
                                             From="-50" To="50" Duration="0:0:5" AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>

            <Rectangle x:Name="Piston1" Width="100" Height="400" Fill="Black" Opacity="0.1" Canvas.Left="100"/>
            <Rectangle x:Name="Piston2" Width="150" Height="500" Fill="Black" Opacity="0.15" Canvas.Right="200"/>
            <Rectangle x:Name="Piston3" Width="80" Height="300" Fill="Black" Opacity="0.1" Canvas.Left="500"/>

            <Rectangle Width="2000" Height="10" Canvas.Top="700" Fill="{StaticResource HazardYellow}" Opacity="0.8"/>
            <Rectangle Width="2000" Height="10" Canvas.Top="720" Fill="Black" Opacity="0.8"/>
        </Canvas>

        <Border x:Name="MainCard" Width="1000" Height="650" Background="#F4F6F7" CornerRadius="6" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="50" ShadowDepth="20" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="6,0,0,6" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Background="{StaticResource SteelBlue}" Width="48" Height="48" CornerRadius="4">
                                    <fa:ImageAwesome Icon="Trash" Foreground="{StaticResource HazardYellow}" Height="20"/>
                                </Border>
                                <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="WASTE TRACKER" FontSize="20" FontWeight="Black" Foreground="{StaticResource SteelBlue}"/>
                                    <TextBlock Text="LOG STOCK LOSS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource AlertRed}" Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Height="4">
                                <Border.Background>
                                    <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                                        <DrawingBrush.Drawing>
                                            <DrawingGroup>
                                                <GeometryDrawing Brush="{StaticResource HazardYellow}">
                                                    <GeometryDrawing.Geometry>
                                                        <RectangleGeometry Rect="0,0,20,20"/>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                                <GeometryDrawing Brush="Black">
                                                    <GeometryDrawing.Geometry>
                                                        <GeometryGroup>
                                                            <PathGeometry Figures="M 0,0 L 10,20 L 20,20 L 10,0 Z"/>
                                                        </GeometryGroup>
                                                    </GeometryDrawing.Geometry>
                                                </GeometryDrawing>
                                            </DrawingGroup>
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>
                                </Border.Background>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,30,0,0">
                            <TextBlock Text="SELECT ITEM" FontSize="10" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                            <ComboBox x:Name="cmbItems" Style="{StaticResource IndustrialCombo}" DisplayMemberPath="ItemName" SelectedValuePath="ItemID" Margin="0,0,0,20"/>

                            <TextBlock Text="QUANTITY LOST" FontSize="10" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtQty" Style="{StaticResource IndustrialInput}" Margin="0,0,0,20"/>

                            <TextBlock Text="REASON FOR LOSS" FontSize="10" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtReason" Style="{StaticResource IndustrialInput}" Height="80" TextWrapping="Wrap" VerticalContentAlignment="Top"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2">
                            <Button x:Name="btnCompact" Click="LogWaste_Click" Height="60" Cursor="Hand" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Border x:Name="bdr" Background="{StaticResource AlertRed}" CornerRadius="4">
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <fa:ImageAwesome Icon="Cog" Foreground="White" Height="18" Spin="True" SpinDuration="5" Margin="0,0,10,0"/>
                                                        <TextBlock Text="ACTIVATE COMPACTOR" FontWeight="Black" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr" Property="Background" Value="#A93226"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="CANCEL" Click="Cancel_Click" Margin="0,15,0,0"
                                    Background="Transparent" BorderThickness="0" FontWeight="Bold" Foreground="#95A5A6" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Column="1" Background="#ECF0F1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="COMPACTED LOG (RECENT)" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="30,30,0,10"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="30,0,30,30">
                        <ItemsControl x:Name="icWasteLog">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Height="60" Margin="0,0,0,5" Background="White" BorderBrush="#BDC3C7" BorderThickness="1,1,1,3" CornerRadius="2">
                                        <Grid Margin="15,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Background="{StaticResource PanelGrey}" Width="30" Height="30" CornerRadius="4">
                                                <fa:ImageAwesome Icon="ExclamationTriangle" Foreground="{StaticResource HazardYellow}" Height="12"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                                <TextBlock Text="{Binding ItemName}" FontWeight="Bold" Foreground="{StaticResource SteelBlue}"/>
                                                <TextBlock Text="{Binding Reason}" FontSize="11" Foreground="#95A5A6" FontStyle="Italic"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding QtyWasted, StringFormat='-{0:N0}'}" FontWeight="Black" FontSize="16" Foreground="{StaticResource AlertRed}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

        <Grid x:Name="Overlay_Compactor" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.3"/>
            </Grid.Background>

            <Border x:Name="CompactorPlate" VerticalAlignment="Top" Height="800" Background="#212F3C" BorderBrush="{StaticResource HazardYellow}" BorderThickness="0,0,0,20">
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,50">
                    <TextBlock Text="COMPACTING..." Foreground="{StaticResource HazardYellow}" FontSize="48" FontWeight="Black" 
                               HorizontalAlignment="Center"/>
                    <fa:ImageAwesome Icon="Cog" Foreground="White" Height="40" Spin="True" Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>