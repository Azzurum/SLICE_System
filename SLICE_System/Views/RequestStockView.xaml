<UserControl x:Class="SLICE_System.Views.RequestStockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             Background="#FDFBF7" FontFamily="Segoe UI">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PizzaOrange" Color="#E67E22"/>
        <SolidColorBrush x:Key="PizzaRed" Color="#C0392B"/>
        <SolidColorBrush x:Key="DarkText" Color="#2C3E50"/>
        <SolidColorBrush x:Key="LightText" Color="#95A5A6"/>

        <Style x:Key="IngredientCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#DDD" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#E67E22" BlurRadius="15" ShadowDepth="4" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Canvas x:Name="AnimCanvas" IsHitTestVisible="False" ClipToBounds="True"/>

        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="10,0,0,20">
                    <TextBlock Text="Pantry Market" FontSize="26" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                    <TextBlock Text="Select ingredients to request from another branch." FontSize="14" Foreground="{StaticResource LightText}"/>
                </StackPanel>

                <WrapPanel Grid.Row="1" Margin="10,0,0,20">
                    <RadioButton Content="All" IsChecked="True" Style="{StaticResource {x:Type ToggleButton}}" Margin="0,0,10,0" Padding="15,8" Background="White" BorderBrush="#EEE"/>
                    <RadioButton Content="Dough &amp; Flour" Style="{StaticResource {x:Type ToggleButton}}" Margin="0,0,10,0" Padding="15,8" Background="White" BorderBrush="#EEE"/>
                    <RadioButton Content="Toppings" Style="{StaticResource {x:Type ToggleButton}}" Margin="0,0,10,0" Padding="15,8" Background="White" BorderBrush="#EEE"/>
                </WrapPanel>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
                    <ItemsControl ItemsSource="{Binding MarketItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource IngredientCard}" MouseDown="Card_MouseDown">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <fa:ImageAwesome Icon="{Binding Icon}" Foreground="{StaticResource PizzaOrange}" Height="40" VerticalAlignment="Center" Grid.Row="0"/>
                                        <Border Background="#F0F3F4" CornerRadius="10" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" Padding="6,2">
                                            <TextBlock Text="{Binding CurrentStock, StringFormat='In Stock: {0:N0}'}" FontSize="10" Foreground="{StaticResource LightText}"/>
                                        </Border>
                                        <TextBlock Grid.Row="1" Text="{Binding Name}" FontWeight="SemiBold" TextAlignment="Center" TextWrapping="Wrap" Margin="5"/>
                                        <Border Grid.Row="2" Background="#FDF2E9" CornerRadius="0,0,12,12" Height="30">
                                            <TextBlock Text="+ ADD TO TICKET" FontSize="10" FontWeight="Bold" Foreground="{StaticResource PizzaOrange}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="1">
                <Border Height="10" VerticalAlignment="Top" Background="#BDC3C7" CornerRadius="2" Margin="10,20,10,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.2"/>
                    </Border.Effect>
                </Border>

                <Border x:Name="TicketPanel" Background="White" Margin="20,25,20,20" CornerRadius="0,0,5,5" RenderTransformOrigin="0.5,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#BDC3C7" BlurRadius="20" ShadowDepth="5" Opacity="0.2"/>
                    </Border.Effect>
                    <Border.RenderTransform>
                        <TransformGroup>
                            <TranslateTransform x:Name="TicketTranslate" X="0" Y="0"/>
                            <RotateTransform x:Name="TicketRotate" Angle="0"/>
                            <ScaleTransform x:Name="TicketScale" ScaleX="1" ScaleY="1"/>
                        </TransformGroup>
                    </Border.RenderTransform>

                    <Grid>
                        <Path Data="M0,0 L10,5 L20,0 L30,5 L40,0 L50,5 L60,0 L70,5 L80,0 L90,5 L100,0 L110,5 L120,0 L130,5 L140,0 L150,5 L160,0 L170,5 L180,0 L190,5 L200,0 L210,5 L220,0 L230,5 L240,0 L250,5 L260,0 L270,5 L280,0 L290,5 L300,0 L310,5 L320,0 L330,5 L340,0 L350,5 L360,0"
                              Fill="#BDC3C7" VerticalAlignment="Top" Margin="0,-5,0,0" Opacity="0.5"/>

                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                                <TextBlock Text="ORDER TICKET #104" FontFamily="Consolas" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                                <TextBlock Text="REQUEST FROM" FontSize="10" FontWeight="Bold" Foreground="{StaticResource LightText}"/>
                                <ComboBox x:Name="cmbSource" ItemsSource="{Binding AvailableBranches}" DisplayMemberPath="BranchName" SelectedValuePath="BranchID" Height="35" FontSize="14"/>
                            </StackPanel>

                            <ListView Grid.Row="2" ItemsSource="{Binding CartItems}" BorderThickness="0" Background="Transparent" Margin="-5,0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontFamily="Consolas" Foreground="{StaticResource DarkText}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="x" Foreground="{StaticResource LightText}" Margin="0,0,5,0"/>
                                                <TextBox Text="{Binding RequestQty, UpdateSourceTrigger=PropertyChanged}" Width="30" TextAlignment="Center" BorderThickness="0" Background="#F4F6F6"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Click="RemoveFromCart_Click" Background="Transparent" BorderThickness="0" Margin="10,0,0,0">
                                                <fa:ImageAwesome Icon="Times" Foreground="#E74C3C" Height="10"/>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <StackPanel Grid.Row="3" Margin="0,15">
                                <Separator Background="Black" Margin="0,0,0,10"/>
                                <Grid>
                                    <TextBlock Text="TOTAL QTY" FontFamily="Consolas" FontWeight="Bold"/>
                                    <TextBlock x:Name="txtTotalUnits" Text="0" HorizontalAlignment="Right" FontFamily="Consolas" FontWeight="Bold" Foreground="{StaticResource PizzaOrange}"/>
                                </Grid>
                            </StackPanel>

                            <Button Grid.Row="4" Click="Submit_Click" Height="50" Background="{StaticResource DarkText}" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="0"/>
                                    </Style>
                                </Button.Resources>
                                <TextBlock Text="SEND TO KITCHEN" FontFamily="Consolas" FontWeight="Bold" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>