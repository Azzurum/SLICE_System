<UserControl x:Class="SLICE_System.Views.ReconciliationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             Background="Transparent" FontFamily="Segoe UI">

    <UserControl.Resources>
        <SolidColorBrush x:Key="AuditBlue" Color="#3498DB"/>
        <SolidColorBrush x:Key="AuditDark" Color="#2C3E50"/>
        <SolidColorBrush x:Key="MatchGreen" Color="#27AE60"/>
        <SolidColorBrush x:Key="VarianceOrange" Color="#E67E22"/>
        <SolidColorBrush x:Key="ScannerLight" Color="#ECF0F1"/>

        <Style TargetType="TextBox" x:Key="AuditInput">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="bdr" CornerRadius="4" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="bdr" Property="BorderBrush" Value="{StaticResource AuditBlue}"/>
                                <Setter TargetName="bdr" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid ClipToBounds="True">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F0F3F4" Offset="0"/>
                <GradientStop Color="#E5E8E8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Canvas Opacity="0.1">
            <Canvas.Triggers>
                <EventTrigger RoutedEvent="Canvas.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="Box1" Storyboard.TargetProperty="(Canvas.Top)" From="800" To="-100" Duration="0:0:20"/>
                            <DoubleAnimation Storyboard.TargetName="Box2" Storyboard.TargetProperty="(Canvas.Top)" From="600" To="-200" Duration="0:0:30"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>

            <Rectangle x:Name="Box1" Width="100" Height="100" Stroke="{StaticResource AuditBlue}" StrokeThickness="2" Canvas.Left="100"/>
            <Rectangle x:Name="Box2" Width="150" Height="150" Stroke="{StaticResource AuditDark}" StrokeThickness="2" Canvas.Right="200"/>
        </Canvas>

        <Border Width="1000" Height="650" Background="White" CornerRadius="8" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#BDC3C7" BlurRadius="30" ShadowDepth="10" Opacity="0.4"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{StaticResource AuditBlue}" Width="40" Height="40" CornerRadius="4">
                            <fa:ImageAwesome Icon="Clipboard" Foreground="White" Height="18"/>
                        </Border>
                        <StackPanel Margin="15,0,0,0">
                            <TextBlock Text="STOCK RECONCILIATION" FontSize="22" FontWeight="Black" Foreground="{StaticResource AuditDark}"/>
                            <TextBlock Text="Verify physical inventory against system records." FontSize="12" Foreground="#7F8C8D"/>
                        </StackPanel>
                    </StackPanel>
                    <Separator Background="#ECF0F1" Margin="0,15,0,0"/>
                </StackPanel>

                <DataGrid x:Name="dgRecon" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                          BorderThickness="0" Background="White" RowHeight="50" GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#ECF0F1">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#95A5A6"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            <Setter Property="BorderBrush" Value="#ECF0F1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ITEM NAME" Binding="{Binding ItemName}" Width="*" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource AuditDark}"/>
                                    <Setter Property="Margin" Value="10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="SYSTEM QTY" Binding="{Binding SystemQty, StringFormat=N0}" Width="150" IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="#7F8C8D"/>
                                    <Setter Property="Margin" Value="10,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="PHYSICAL COUNT" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding PhysicalQty, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource AuditInput}" Margin="5"
                                             PreviewTextInput="TextBox_PreviewTextInput"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="STATUS" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="10,5" HorizontalAlignment="Left" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                                        <Setter Property="Background" Value="#D5F5E3"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMatched}" Value="False">
                                                        <Setter Property="Background" Value="#FDEBD0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel Orientation="Horizontal">
                                            <fa:ImageAwesome Height="12" Margin="0,0,5,0">
                                                <fa:ImageAwesome.Style>
                                                    <Style TargetType="fa:ImageAwesome">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                                                <Setter Property="Icon" Value="Check"/>
                                                                <Setter Property="Foreground" Value="{StaticResource MatchGreen}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsMatched}" Value="False">
                                                                <Setter Property="Icon" Value="Exclamation"/>
                                                                <Setter Property="Foreground" Value="{StaticResource VarianceOrange}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </fa:ImageAwesome.Style>
                                            </fa:ImageAwesome>

                                            <TextBlock FontWeight="Bold" FontSize="11">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMatched}" Value="True">
                                                                <Setter Property="Text" Value="MATCHED"/>
                                                                <Setter Property="Foreground" Value="{StaticResource MatchGreen}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsMatched}" Value="False">
                                                                <Setter Property="Text" Value="VARIANCE"/>
                                                                <Setter Property="Foreground" Value="{StaticResource VarianceOrange}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Button Content="FINALIZE AUDIT" Click="Submit_Click" Height="50" Width="220" HorizontalAlignment="Right"
                            Background="{StaticResource AuditBlue}" Foreground="White" FontWeight="Bold" Cursor="Hand" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect Color="#3498DB" BlurRadius="15" Opacity="0.4" ShadowDepth="5"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>