<Window x:Class="SLICE_System.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About S.L.I.C.E." Height="380" Width="600"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        FontFamily="Segoe UI">

    <Border CornerRadius="12" Background="White" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3" Color="#2C3E50"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#2C3E50" CornerRadius="12,0,0,12">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Path Data="{StaticResource Icon_Pizza}" Fill="#E67E22" 
                          Height="60" Width="60" Stretch="Uniform" Margin="0,0,0,20"/>

                    <TextBlock Text="S.L.I.C.E." Foreground="White" FontSize="36" FontWeight="Bold" 
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="ENTERPRISE" Foreground="#95A5A6" FontSize="12" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>

                    <Separator Width="40" Background="#E67E22" Height="3" Margin="0,30,0,0"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock Text="SYSTEM INFORMATION" Foreground="#7F8C8D" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="Version 1.0.0 (RC)" Foreground="#2D3436" FontSize="24" FontWeight="Light" Margin="0,5,0,20"/>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Path Data="{StaticResource Icon_Users}" Fill="#E67E22" Height="16" Width="16" Stretch="Uniform" HorizontalAlignment="Left"/>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Lead Developer" Foreground="#95A5A6" FontSize="11"/>
                            <TextBlock Text="Ken Arceno" Foreground="#2C3E50" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Path Data="{StaticResource Icon_Box}" Fill="#E67E22" Height="16" Width="16" Stretch="Uniform" HorizontalAlignment="Left"/>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Project Context" Foreground="#95A5A6" FontSize="11"/>
                            <TextBlock Text="BS Information Technology Project" Foreground="#2C3E50" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="© 2026 S.L.I.C.E. Inc." Foreground="#BDC3C7" FontSize="11" VerticalAlignment="Center" Margin="0,0,20,0"/>

                    <Button Content="Close" Click="Close_Click" Width="100" Height="35"
                            Background="#E67E22" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#D35400"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>