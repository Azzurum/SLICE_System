<Window x:Class="SLICE_System.Views.AddIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="New Inventory Item" Height="550" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Color="Black" ShadowDepth="5" Opacity="0.15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="25,25,25,10">
                <StackPanel>
                    <TextBlock Text="New Ingredient" FontSize="22" FontWeight="Black" Foreground="#2C3E50"/>
                    <TextBlock Text="Define a new raw material for the registry." FontSize="12" Foreground="#95A5A6"/>
                </StackPanel>

                <Button Click="Cancel_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <fa:ImageAwesome Icon="Times" Height="14" Foreground="#95A5A6"/>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Margin="25,10">

                <TextBlock Text="ITEM NAME" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                <TextBox Name="txtName" Tag="e.g. Premium Mozzarella"/>

                <TextBlock Text="CATEGORY" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,15,0,5"/>
                <ComboBox Name="cmbCategory" Height="40" FontSize="14" Padding="10,8" Background="#F9F9F9" BorderBrush="#E0E0E0">
                    <ComboBoxItem Content="Dough &amp; Flour" IsSelected="True"/>
                    <ComboBoxItem Content="Cheese &amp; Dairy"/>
                    <ComboBoxItem Content="Meat &amp; Protein"/>
                    <ComboBoxItem Content="Sauce &amp; Spices"/>
                    <ComboBoxItem Content="Vegetables"/>
                    <ComboBoxItem Content="Packaging"/>
                </ComboBox>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="BUY IN (BULK)" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                        <TextBox Name="txtBulk" Text="Sack"/>
                        <TextBlock Text="How you purchase it." FontSize="10" Foreground="#BDC3C7" Margin="0,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="USE IN (RECIPE)" FontSize="11" FontWeight="Bold" Foreground="#95A5A6" Margin="0,0,0,5"/>
                        <TextBox Name="txtBase" Text="Grams"/>
                        <TextBlock Text="How you cook with it." FontSize="10" Foreground="#BDC3C7" Margin="0,3,0,0"/>
                    </StackPanel>
                </Grid>

                <Border Background="#FFF8E1" CornerRadius="8" Padding="15" Margin="0,20,0,0" BorderBrush="#FFE082" BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <StackPanel>
                                <TextBlock Text="CONVERSION RATIO" FontSize="11" FontWeight="Bold" Foreground="#F39C12"/>
                                <TextBlock Text="1 Bulk Unit = ??? Base Units" FontSize="12" Foreground="#7F8C8D"/>
                            </StackPanel>
                            <TextBox Name="txtRatio" Text="1000" HorizontalAlignment="Right" Width="100" FontWeight="Bold" TextAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>

            <StackPanel Grid.Row="2" Margin="25" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40" Background="Transparent" Foreground="#7F8C8D" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"/>

                <Button Name="btnSave" Click="btnSave_Click" Width="140" Height="40" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#27AE60" CornerRadius="8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <fa:ImageAwesome Icon="Save" Foreground="White" Height="12" Margin="0,0,8,0"/>
                                    <TextBlock Text="SAVE ITEM" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>