<UserControl x:Class="SLICE_System.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             Background="#FDFBF7" FontFamily="Segoe UI">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BrandGreen" Color="#27AE60"/>
        <SolidColorBrush x:Key="BrandOrange" Color="#E67E22"/>
        <SolidColorBrush x:Key="BrandBlue" Color="#34495E"/>
        <SolidColorBrush x:Key="BrandRed" Color="#E74C3C"/>
        <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLight" Color="#95A5A6"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" Color="#BDC3C7" ShadowDepth="4" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrandGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RowIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="#F2F4F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                <TextBlock Text="Central Warehouse" FontSize="28" FontWeight="Black" Foreground="{StaticResource TextDark}"/>
                <TextBlock Text="Oversee procurement, bulk storage, and raw materials" FontSize="14" Foreground="{StaticResource TextLight}" Margin="0,2,0,0"/>
            </StackPanel>

            <WrapPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Border Background="White" CornerRadius="20" Height="40" Width="260" Margin="0,0,15,5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" Color="#BDC3C7" ShadowDepth="1" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <fa:ImageAwesome Icon="Search" Height="13" Foreground="{StaticResource TextLight}" HorizontalAlignment="Center"/>
                        <TextBox x:Name="txtSearch" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Column="1" BorderThickness="0" Background="Transparent" 
                                 VerticalContentAlignment="Center" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" Margin="0,0,15,0"/>
                        <TextBlock Grid.Column="1" Text="Search items..." Foreground="#BDC3C7" FontWeight="Medium"
                                   VerticalAlignment="Center" IsHitTestVisible="False" Margin="2,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=txtSearch}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <Button Command="{Binding RefreshCommand}" Background="White" Width="40" Margin="0,0,10,5" ToolTip="Refresh Data" Style="{StaticResource ActionButtonStyle}">
                    <Button.Foreground>
                        <SolidColorBrush Color="#95A5A6"/>
                    </Button.Foreground>
                    <fa:ImageAwesome Icon="Refresh" Height="14"/>
                </Button>

                <Button Command="{Binding DispatchCommand}" CommandParameter="{Binding SelectedItems, ElementName=GridIngredients}" Margin="0,0,10,5" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource BrandOrange}">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Truck" Height="13" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="DISPATCH"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding RecordPurchaseCommand}" Style="{StaticResource ActionButtonStyle}" Background="{StaticResource BrandBlue}" Margin="0,0,10,5">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="ShoppingCart" Height="13" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="BUY STOCK"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding AddItemCommand}" Style="{StaticResource ActionButtonStyle}" Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Plus" Height="13" Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="NEW ITEM"/>
                    </StackPanel>
                </Button>
            </WrapPanel>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}">
            <DataGrid x:Name="GridIngredients"
                      ItemsSource="{Binding Ingredients}" 
                      SelectedItem="{Binding SelectedIngredient}"
                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                      GridLinesVisibility="Horizontal" HeadersVisibility="Column" Background="Transparent" 
                      BorderThickness="0" RowHeight="60" VerticalScrollBarVisibility="Auto" Margin="15"
                      AlternatingRowBackground="#FAFCFC">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="Padding" Value="15,12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#EAECEE"/>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ItemID}" Width="60" Foreground="{StaticResource TextLight}" FontWeight="SemiBold"/>

                    <DataGridTextColumn Header="INGREDIENT" Binding="{Binding ItemName}" Width="*" FontWeight="Bold" Foreground="{StaticResource TextDark}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="CATEGORY" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#F4F6F7" CornerRadius="6" Padding="10,4" HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Category}" Foreground="{StaticResource TextDark}" FontSize="11" FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="GLOBAL STOCK" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalStock, StringFormat='{}{0:N0}'}" FontWeight="Black" FontSize="15">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource BrandGreen}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding TotalStock}" Value="0">
                                                        <Setter Property="Foreground" Value="{StaticResource BrandRed}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding BulkUnit}" Foreground="{StaticResource TextLight}" FontWeight="Bold" FontSize="11" Margin="5,0,0,0" VerticalAlignment="Bottom"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="BUY UNIT" Binding="{Binding BulkUnit}" Width="90" Foreground="{StaticResource TextDark}"/>
                    <DataGridTextColumn Header="USE UNIT" Binding="{Binding BaseUnit}" Width="90" Foreground="{StaticResource TextDark}"/>

                    <DataGridTemplateColumn Header="ACTIONS" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource RowIconButtonStyle}" 
                                            Command="{Binding DataContext.EditItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" ToolTip="Edit Ingredient">
                                        <fa:ImageAwesome Icon="Pencil" Height="14" Foreground="#7F8C8D"/>
                                    </Button>

                                    <Button Style="{StaticResource RowIconButtonStyle}" 
                                            Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                            CommandParameter="{Binding}" Margin="5,0,0,0" ToolTip="Remove from Warehouse">
                                        <fa:ImageAwesome Icon="Trash" Height="14" Foreground="{StaticResource BrandRed}"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>