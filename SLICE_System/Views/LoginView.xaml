<Window x:Class="SLICE_System.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="S.L.I.C.E. Arcade Login" 
        WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize"
        Background="#FF4D4D" FontFamily="Segoe UI Black">

    <Window.Resources>
        <SolidColorBrush x:Key="PopWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="PopBlack" Color="#2D2D2D"/>
        <SolidColorBrush x:Key="PopYellow" Color="#FFD05B"/>
        <SolidColorBrush x:Key="PopGreen" Color="#00E676"/>
        <SolidColorBrush x:Key="PopRed" Color="#FF4757"/>

        <Style TargetType="{x:Type Control}" x:Key="PopInputStyle">
            <Setter Property="Background" Value="#F7F7F7"/>
            <Setter Property="Foreground" Value="{StaticResource PopBlack}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#BDBDBD"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PopRed}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF4757" BlurRadius="0" ShadowDepth="3" Direction="315" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PopButtonStyle">
            <Setter Property="Background" Value="{StaticResource PopYellow}"/>
            <Setter Property="Foreground" Value="{StaticResource PopBlack}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="BtnScale"/>
                            </Grid.RenderTransform>

                            <Border x:Name="ShadowLayer" CornerRadius="12" Background="#C49F3A" Margin="0,5,0,0"/>

                            <Border x:Name="border" CornerRadius="12" Background="{TemplateBinding Background}" Margin="0,0,0,5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE082"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleX" To="1.05" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleY" To="1.05" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="BtnScale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Margin" Value="0,5,0,0"/>
                                <Setter TargetName="ShadowLayer" Property="Margin" Value="0,5,0,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FF4757"/>
        </Grid.Background>

        <Canvas ClipToBounds="True">
            <Canvas.Triggers>
                <EventTrigger RoutedEvent="Canvas.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetName="PatternTransform" Storyboard.TargetProperty="X" From="0" To="-100" Duration="0:0:2"/>
                            <DoubleAnimation Storyboard.TargetName="PatternTransform" Storyboard.TargetProperty="Y" From="0" To="-100" Duration="0:0:2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Canvas.Triggers>

            <Rectangle Width="3000" Height="2000" Canvas.Left="-100" Canvas.Top="-100">
                <Rectangle.Fill>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,100,100" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="#B3FF3333">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <PathGeometry Figures="M 50,20 L 80,80 L 20,80 Z" />
                                            <EllipseGeometry Center="50,60" RadiusX="5" RadiusY="5"/>
                                            <EllipseGeometry Center="60,70" RadiusX="5" RadiusY="5"/>
                                            <EllipseGeometry Center="40,70" RadiusX="5" RadiusY="5"/>
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <TranslateTransform x:Name="PatternTransform"/>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Canvas>

        <Button Content="EXIT SYSTEM" Click="btnClose_Click" Cursor="Hand"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="30"
                Background="White" Foreground="#FF4757" FontFamily="Segoe UI Black" 
                FontSize="25"
                Padding="50,15" 
                MinWidth="180" BorderThickness="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border CornerRadius="25" Background="Black" Opacity="0.1" Margin="0,4,0,0"/>
                        <Border x:Name="bdr" CornerRadius="25" 
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bdr" Property="Background" Value="#FFE0E0"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bdr" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="2"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

            <Border Width="420" Height="500" Background="Black" CornerRadius="20" Opacity="0.2" Margin="15,15,0,0">
                <Border.RenderTransform>
                    <TranslateTransform x:Name="ShadowSlide"/>
                </Border.RenderTransform>
            </Border>

            <Border x:Name="LoginCard" Width="420" Background="White" CornerRadius="20" Padding="40"
                    BorderBrush="Black" BorderThickness="4">
                <Border.RenderTransform>
                    <ScaleTransform x:Name="CardScale" ScaleX="0" ScaleY="0" CenterX="210" CenterY="250"/>
                </Border.RenderTransform>

                <StackPanel>
                    <Grid Height="150" Width="150" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Grid.Triggers>
                            <EventTrigger RoutedEvent="Grid.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                        <DoubleAnimation Storyboard.TargetName="IconTrans" Storyboard.TargetProperty="Y" From="0" To="-10" Duration="0:0:1">
                                            <DoubleAnimation.EasingFunction>
                                                <SineEase EasingMode="EaseInOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Grid.Triggers>

                        <Image Source="/Assets/Logo.png" Stretch="Uniform" Margin="0" RenderTransformOrigin="0.5,0.5">
                            <Image.Effect>
                                <DropShadowEffect Color="#FFD05B" BlurRadius="0" ShadowDepth="4" Direction="315" Opacity="0.5"/>
                            </Image.Effect>
                            <Image.RenderTransform>
                                <TranslateTransform x:Name="IconTrans"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>

                    <TextBlock Text="READY TO COOK?" FontSize="28" Foreground="{StaticResource PopBlack}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Log in to start your shift!" FontFamily="Segoe UI Semibold" FontSize="14" Foreground="#9E9E9E" HorizontalAlignment="Center" Margin="0,5,0,30"/>

                    <TextBlock Text="USERNAME" FontFamily="Segoe UI Black" Foreground="#FF4757" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUsername" Height="50" Style="{StaticResource PopInputStyle}"/>

                    <TextBlock Text="PASSWORD" FontFamily="Segoe UI Black" Foreground="#FF4757" FontSize="12" Margin="0,20,0,5"/>
                    <PasswordBox x:Name="txtPassword" Height="50" Style="{StaticResource PopInputStyle}"/>

                    <Button x:Name="btnLogin" Content="LET'S GO!" Click="btnLogin_Click"
                            Height="60" Margin="0,40,0,0" Style="{StaticResource PopButtonStyle}" FontFamily="Segoe UI Black"/>

                </StackPanel>
            </Border>

            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleX" From="0" To="1" Duration="0:0:0.8">
                                <DoubleAnimation.EasingFunction>
                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="5"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="CardScale" Storyboard.TargetProperty="ScaleY" From="0" To="1" Duration="0:0:0.8">
                                <DoubleAnimation.EasingFunction>
                                    <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="5"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
        </Grid>

        <TextBlock Text="S.L.I.C.E. SYSTEM v1.0" Foreground="White" FontFamily="Segoe UI Semibold" 
                   VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20" Opacity="0.8"/>
    </Grid>
</Window>